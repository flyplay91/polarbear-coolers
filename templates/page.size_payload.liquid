<div class="page-width">
  <div class="grid page-wrapper page-wrapper--size-payload">
    {% section 'page-sidebar' %}
    
    <div class="normal-page-content">
      <h1>{{ page.title }}</h1>

      <div class="page-size-payload-inner">
        {% if page.content.size > 0 %}
          {{ page.content }}
        {% endif %}
      </div>
    </div>
  </div>
</div>
