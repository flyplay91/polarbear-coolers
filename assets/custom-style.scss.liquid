            width: 34%;
          }

          .bottom-dropdown-menu-item {
            
            background-color: #fff;
            color: #000;
            margin: 5px;
            box-sizing: border-box;
            border-radius: 5px;
            padding: 20px;

            h4 {
              font-size: 19.2px;
               font-weight: 900;
            }

            p {
              line-height: 1.6;
              font-size: 18px;
            }

            a {
              background-color: #fcae46;
              display: block;
              text-align: center;
              text-decoration: none;
              max-width: 250px;
              margin: 0 auto;
              font-size: 20px;
              font-weight: 700;
              padding: 10px 0;
              &:hover {
                background-color: #e17824;
              }
            }
          }
        }

        .bottom-dropdown-menu-bottom {
          padding: 20px;
          a {
            letter-spacing: 0.8px;
            background-color: #fcae46;
            color: white;
