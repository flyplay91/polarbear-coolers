.product-single__media-group {
  display: flex;
  .product-thumb-images {
    order: 1;
    width: 90px;
    margin-right: 15px;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    .product-single__thumbnails-item {
      border: 1px solid #d4cccc;
      padding: 5px;
      margin: 10px 0;
      cursor: pointer;
    }
    .slick-list {
      transform: none;
      &:before,
      &:after {
        content: '';
        display: block;
        width: 100%;
        height: 50px;
        background: #ffffff;
        position: absolute;
        z-index: 1;
      }
      &:before {
        top: 0;
      }
      &:after {
        bottom: 0;
      }
    }
    .slick-prev,
    .slick-next {
      position: relative;
      transform: none;
      top: auto;
      width: 100%;
      height: 32px;
      left: 0;
      right: 0;
      opacity: 0.75;
      &:before,
      &:after {
        content: '';
        display: block;
        width: 10px;
        height: 2px;
        background: #333;
        position: absolute;
        opacity: 0.75;
      }
      &:hover,
      &:focus {
        opacity: 1;
        box-shadow: 0 0 1rem 0 rgba(51, 51, 51, 0.25);
      }
    }
    .slick-next {
      &:before {
        transform: rotate(45deg);
        top: 50%;
        right: 50%;
        margin-right: -2px;
      }
      &:after {
        transform: rotate(-45deg);
        top: 50%;
        left: 50%;
        margin-left: -2px;
      }
    }
    .slick-prev {
      &:before {
        transform: rotate(-45deg);
        bottom: 50%;
        right: 50%;
        margin-right: -2px;
      }
      &:after {
        transform: rotate(45deg);
        bottom: 50%;
        left: 50%;
        margin-left: -2px;
      }
    }
  }
  .product-main-image {
    width: calc(100% - 105px);
    order: 2;
    border: 1px solid #d4cccc;
  }
